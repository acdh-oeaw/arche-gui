
{% set properties = {
    'acdh:hasAddressLine1': {
        'icon': 'subtitles',
        'label': 'Address'
    },
    'acdh:hasAddressLine2': {
        'icon': 'subtitles',
        'label': 'Address'
    },
    'acdh:Postcode': {
        'icon': 'subtitles',
        'label': 'Postcode'
    },
    'acdh:hasCity': {
        'icon': 'subtitles',
        'label': 'City'
    },
    'acdh:hasRegion': {
        'icon': 'subtitles',
        'label': 'Region'
    },
    'acdh:hasCountry': {
	'icon': 'subtitles',
        'label': 'Country'
    },
    'acdh:hasEmail': {
        'icon': 'subtitles',
        'label': 'Email'
    },
    'acdh:hasUrl': {
        'icon': 'subtitles',
        'label': 'Url'
    }
}
%}

<div class="arche-detail-view" >
    
    <div class="arche-detail-main" id="arche-dv-main">
        {% if basic.isTitleImage() %}<div class="res-inside-wrap col-lg-8 ">{% endif%}
        
            {% if  basic.getTitle() %}
                <div class="res-property">
                    <span class="res-title">
                        {{  basic.getTitle() }}
                    </span>
                </div>
            {% endif%} 

            {%  if basic.getData('acdh:hasPersonalTitle') %}
                {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', 
                    {'data': basic.getData('acdh:hasPersonalTitle'), 'icon': "title", 'label': "Personal Title"} ) }}
            {% endif%}
            
            {% if basic.getAcdhType() %}
                <div class="res-property">
                    <i class="material-icons">&#xE54E;</i>
                    <span class="res-prop-label">{{ "Type"|trans }}:</span> 
                    <span class="res-prop-value">
                        <a href="/browser/discover/&type={{ basic.getAcdhType() }}/10">{{ basic.getAcdhType() }}</a>
                    </span>
                </div>
            {% endif%}
            
            {%  if basic.getData('acdh:hasAlternativeTitle') %}
                {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', {'data': basic.getData('acdh:hasAlternativeTitle'), 'icon': "title", 'label': "Alternative Title"} ) }}
            {% endif%}
            
            {%  if basic.getNonAcdhIdentifiers() %}
                {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', {'data': basic.getNonAcdhIdentifiers(), 'icon': "label", 'label': "Identifier(s)", 'type': 'external_url', 'where_to_open': 'new_tab'} ) }}
            {% endif%}
            
            {%  if basic.getData('acdh:isMemberOf') %}
                {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', {'data': basic.getData('acdh:isMemberOf'), 'icon': "account_balance", 'label': "Member of" ,'type': 'internal_url' } ) }}
            {% endif%}
    
            {%  if (properties) %}
                <h3 class="single-res-heading">{{ "Contact Details"|trans }}</h3>

                {% for key, value in properties %}
                    {% if basic.getData(key) %}
                         {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', {'data': basic.getData(key), 'icon': value.icon, 'label':  value.label, 'type': value.type, 'dateformat': value.dateformat, 'delimiter': value.delimiter, 'where_to_open': value.where_to_open } ) }}
                    {% endif%}
                {% endfor %}
                
            {% endif%}
            
        {% if basic.isTitleImage() %}</div>{% endif%}
        
        {% if basic.isTitleImage() %}	
            <div class="res-inside-wrap col-lg-4 ">	
                <div class="single-res-thumb">
                    <a href="/browser/oeaw_detail/{{ basic.getRepoId() }}">
                        {{ basic.getTitleImage()|raw }}
                    </a>
                </div>
            </div>
        {% endif%}
    </div>

</div>    
