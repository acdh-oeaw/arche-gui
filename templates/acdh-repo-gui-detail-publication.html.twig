
{% set properties = {
    'acdh:hasAuthor': {
        'icon': 'people',
        'label': 'Author(s)',
        'url_only': false,
        'repoid': true
    },
    'acdh:hasEditor': {
        'icon': 'people',
        'label': 'Editor(s)',
        'url_only': false, 
        'repoid': true
    },
    'acdh:hasSeriesInformation': {
        'icon': 'info',
        'label': 'Seriers information',
        'url_only': false, 
        'repoid': true
    },
    'acdh:hasPages': {
        'icon': 'wallpaper',
        'label': 'Pages',
        'url_only': false, 
        'repoid': true
    },
    'acdh:hasAvailableDate': {
        'icon': 'today',
        'label': 'Available Date',
        'url_only': false,
        'dateformat': 'd M Y'
    },
    'acdh:hasCity': {
        'icon': 'subtitles',
        'label': 'City',
        'url_only': false, 
        'repoid': true
    },
    'acdh:hasRegion': {
        'icon': 'subtitles',
        'label': 'Region',
        'url_only': false, 
        'repoid': true
    },
    'acdh:hasPublisher': {
	'icon': 'person_add',
        'label': 'Publisher(s)',
        'url_only': false,
        'repoid': true
    },
    'acdh:hasNonLinkedIdentifier': {
	'icon': 'label_add',
        'label': 'NonLinked Identifier',
        'url_only': false,
        'repoid': true
    },
    'acdh:hasUrl': {
        'icon': 'web',
        'label': 'Url',
        'url_only': false,
        'repoid': true
    },
    'acdh:hasEditorialPractice': {
        'icon': 'person_add',
        'label': 'Editorial Practice',
        'url_only': false,
        'repoid': true
    },
    'acdh:hasNote': {
        'icon': 'info_outline',
        'label': 'Note',
        'url_only': false,
        'repoid': true
    },
    'acdh:hasLanguage': {
        'icon': 'flag',
        'label': 'Language',
        'url_only': false
    }
}
%}

<div class="arche-detail-view" >
    
    <div class="arche-detail-main" id="arche-dv-main">
        {% if basic.isTitleImage() %}<div class="res-inside-wrap col-lg-8 ">{% endif%}
        
            {% if  basic.getTitle() %}
                <div class="res-property">
                    <span class="res-title">
                        {{  basic.getTitle() }}
                    </span>
                </div>
            {% endif%} 

            {% if basic.getAcdhType() %}
                <div class="res-property">
                    <i class="material-icons">&#xE54E;</i>
                    <span class="res-prop-label">{{ "Type"|trans }}:</span> 
                    <span class="res-prop-value">
                        <a href="/browser/discover/&type={{ basic.getAcdhType() }}/10">{{ basic.getAcdhType() }}</a>
                    </span>
                </div>
            {% endif%}
            
            {%  if basic.getData('acdh:hasAlternativeTitle') %}
                {{ include('/modules/contrib/arche-gui/templates/helper-displayField.html.twig', {'data': basic.getData('acdh:hasAlternativeTitle'), 'icon': "title", 'label': "Alternative Title"} ) }}
            {% endif%}
            
            {%  if basic.getData('acdh:hasIdentifier') %}
                <div class="res-property">
                    {{ include('/modules/contrib/arche-gui/templates/helper-displayField.html.twig', {'data': basic.getData('acdh:hasIdentifier'), 'icon': "label", 'label': "Identifier(s)" } ) }}
                </div>
            {% endif%}
            
            {% for key, value in properties %}
                {% if basic.getData(key) %}
                     {{ include('/modules/contrib/arche-gui/templates/helper-displayField.html.twig', {'data': basic.getData(key), 'icon': value.icon, 'label':  value.label, 'url_only': value.url_only, 'repoid': value.repoid, 'dateformat': value.dateformat } ) }}
                {% endif%}
            {% endfor %}
            
            
        {% if basic.isTitleImage() %}</div>{% endif%}
        
        {% if basic.isTitleImage() %}	
            <div class="res-inside-wrap col-lg-4 ">	
                <div class="single-res-thumb">
                    <a href="/browser/oeaw_detail/{{ basic.getRepoId() }}">
                        {{ basic.getTitleImage()|raw }}
                    </a>
                </div>
            </div>
        {% endif%}
    </div>

</div>    
