<div class="row">
    <div class="col-lg-12" id="left-search-settings-div">
        <div class="row">
            <div class="col-lg-12">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" value="Hermann Bahr" id="q"/>
            </div>
            <div class="col-lg-12">
                <input class="form-check-input ml-2" type="checkbox" id="inBinary">&nbsp;&nbsp;
                <label class="form-check-label mr-2" for="inBinary">Search in binary content</label>
            </div>
            <div class="col-lg-12">
                <input class="form-check-input ml-2" type="checkbox" checked="checked" id="linkNamedEntities">&nbsp;&nbsp;
                <label class="form-check-label mr-2" for="followNamedEntities">Follow named entities</label>
            </div>
            <div class="col-lg-12">
                <label class="mx-2" for="preferredLang">Preferred language:</label>
                <select class="form-control mx-2" id="preferredLang">
                    <option value="">no preferences</option>
                    <option value="en">English</option>
                    <option value="de">Deutsch</option>
                </select>
                <br>
            </div>

            <div class="col-lg-12">
                <label class="mx-2" for="pageSize">Page size:</label>
                <input class="form-control mr-sm-2 w-100" type="number" value="10" min="1" id="pageSize"/>
            </div>
            <div class="col-lg-12">
                <label class="mx-2" for="page">Page:</label>
                <div class="input-group mx-2">
                    <select class="form-control" id="page" onchange="search();">
                        <option value="0" selected="selected">1</option>
                    </select>
                    <div class="input-group-append">
                        <div class="input-group-text" id="pageCount">/ 1</div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <button class="btn my-2 my-sm-0" type="submit" id="arche-search-submit-btn">Search</button>
            </div>
        </div>
    </div>
    <div class="col-lg-12" id="left-search-settings-more-div">
    </div>
</div>
