<div class="arche-detail-view" >
    
    <div class="arche-detail-main" id="arche-dv-main">
        {% if basic.isTitleImage() %}<div class="res-inside-wrap col-lg-8 ">{% endif%}
        
            {% if  basic.getTitle() %}
                <div class="res-property">
                    <span class="res-title">
                        {%  if basic.getAccessRestriction() %}
                            {{ include('/modules/contrib/arche-gui/templates/helper-accesResFormat.html.twig', {'data': basic.getAccessRestriction() } ) }}
                        {% endif%}
                        {{  basic.getTitle() }}
                    </span>
                </div>
            {% endif%} 

            {% if basic.getAcdhType() %}
                <div class="res-property">
                    <i class="material-icons">&#xE54E;</i>
                    <span class="res-prop-label">{{ "Type"|trans }}:</span> 
                    <span class="res-prop-value">
                        <a id='archeHref' href="/browser/discover/&type={{ basic.getAcdhType() }}/10">{{ basic.getAcdhType() }}</a>
                    </span>
                </div>
            {% endif%}
            
            {%  if basic.getData('acdh:hasAlternativeTitle') %}
                <div class="res-property">
                    {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', 
                        {'data': basic.getData('acdh:hasAlternativeTitle'), 'icon': "title", 'label': "Alternative Title" } ) }}
                </div>
            {% endif%}
            
            {%  if basic.getNonAcdhIdentifiers() %}
                <div class="res-property">
                    {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', 
                        {'data': basic.getNonAcdhIdentifiers(), 'icon': "label", 'label': "Identifier(s)", 'type': 'external_url', 'where_to_open': 'new_tab' } ) }}
                </div>
            {% endif%}
       
            {% for key, value in properties %}
                {% if basic.getData(key) %}
                     {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', {'data': basic.getData(key), 'icon': value.icon, 'label':  value.label, 'type': value.type, 'dateformat': value.dateformat, 'delimiter': value.delimiter, 'where_to_open': value.where_to_open } ) }}
                {% endif%}
            {% endfor %}
            
        {% if basic.isTitleImage() %}</div>{% endif%}
        
        {% if basic.isTitleImage() %}	
            <div class="res-inside-wrap col-lg-4 ">	
                <div class="single-res-thumb">
                    <a id='archeHref' href="/browser/oeaw_detail/{{ basic.getRepoId() }}">
                        {{ basic.getTitleImage()|raw }}
                    </a>
                </div>
            </div>
        {% endif%}
    </div>

</div>    
