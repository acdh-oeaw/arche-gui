    },
    'acdh:hasAddressLine2': {
        'icon': 'subtitles',
        'label': 'Address',
        'url_only': false
    },
    'acdh:Postcode': {
        'icon': 'subtitles',
        'label': 'Postcode',
        'url_only': false
    },
    'acdh:hasCity': {
        'icon': 'subtitles',
        'label': 'City',
        'url_only': false
    },
    'acdh:hasRegion': {
        'icon': 'subtitles',
        'label': 'Region',
        'url_only': false
    },
    'acdh:hasCountry': {
	'icon': 'subtitles',
        'label': 'Country',
