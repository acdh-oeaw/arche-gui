<div id="vcr-div">
    <h3 class="single-res-heading">{{ "CLARIN Virtual Collection"|trans }}</h3>
    <div class="res-act-button">
        {% set clarinUrl = 'https://collections.clarin.eu/submit/extensional' %} 
        {%  if 'arche-dev.acdh-dev.oeaw.ac.at' in  url %}
            {% set clarinUrl = 'https://beta-collections.clarin.eu/submit/extensional' %} 
        {% endif%} 
        <a href="#" id="getClarinVCR" data-vcrdata="{{ data }}" >{{ "Add to CLARIN Virtual Collection"|trans }}</a>
        <form action="{{ clarinUrl }}" method="POST" target="_blank">
            <input type="hidden" name="name" value="ArcheCollection"/>
            <input type="hidden" name="resourceUri" value="{{ data }}"/>
        </form>
    </div>
</div>
