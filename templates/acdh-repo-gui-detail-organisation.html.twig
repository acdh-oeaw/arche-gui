{% set properties = {
    'acdh:hasAddressLine1': {
        'icon': 'subtitles',
        'label': 'Address',
        'type': 'text'
    },
    'acdh:hasAddressLine2': {
        'icon': 'subtitles',
        'label': 'Address',
        'type': 'text'
    },
    'acdh:Postcode': {
        'icon': 'subtitles',
        'label': 'Postcode',
        'type': 'text'
    },
    'acdh:hasCity': {
        'icon': 'subtitles',
        'label': 'City',
        'type': 'text'
    },
    'acdh:hasRegion': {
        'icon': 'subtitles',
        'label': 'Region',
        'type': 'text'
    },
    'acdh:hasCountry': {
	'icon': 'subtitles',
        'label': 'Country',
        'type': 'text'
    },
    'acdh:hasUrl': {
        'icon': 'subtitles',
        'label': 'Url',
        'type': 'external_url'
    },
    'acdh:hasEmail': {
        'icon': 'subtitles',
        'label': 'Email',
        'type': 'text'
    }    
}
%}

<div class="arche-detail-view" >
    
    <div class="arche-detail-main" id="arche-dv-main">
        {% if basic.isTitleImage() %}<div class="res-inside-wrap col-lg-8 ">{% endif%}
        
            {% if  basic.getTitle() %}
                <div class="res-property">
                    <span class="res-title">
                        {{  basic.getTitle() }}
                    </span>
                </div>
            {% endif%} 

            {%  if basic.getData('acdh:hasAlternativeTitle') %}
                {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', 
                    {'data': basic.getData('acdh:hasAlternativeTitle'), 'icon': "title", 'label': "Alternative Title"} ) }}
            {% endif%}
            
            {% if basic.getAcdhType() %}
                <div class="res-property">
                    <i class="material-icons">&#xE54E;</i>
                    <span class="res-prop-label">{{ "Type"|trans }}:</span> 
                    <span class="res-prop-value">
                        <a href="/browser/discover/&type={{ basic.getAcdhType() }}/10">{{ basic.getAcdhType() }}</a>
                    </span>
                </div>
            {% endif%}
            
            {%  if basic.getNonAcdhIdentifiers() %}
                {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', {'data': basic.getNonAcdhIdentifiers(), 'icon': "label", 'label': "Identifier(s)"} ) }}
            {% endif%}
            
            {% for key, value in properties %}
                {% if basic.getData(key) %}
                     {{ include('/modules/contrib/arche-gui/templates/helper-displayFields.html.twig', {'data': basic.getData(key), 'icon': value.icon, 'label':  value.label, 'type': value.type, 'dateformat': value.dateformat, 'delimiter': value.delimiter, 'where_to_open': value.where_to_open } ) }}
                {% endif%}
            {% endfor %}
            
            <br/>
            <div>
                <h3 class="single-res-heading">{{ "Member(s)"|trans }}</h3>
                <div class="res-act-button">
                    <a href="#" id="showIsMember" data-tableurl="{{ basic.getRepoId() }}">{{ "Get Member(s)"|trans }} </a>
                </div>
                <div id="isMemberTableDiv" style="display: none;">
                    <table class="isMemberTable table table-striped" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>{{ "Member Name"|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>    
            </div>
            <br/>    
            
        {% if basic.isTitleImage() %}</div>{% endif%}
        
        {% if basic.isTitleImage() %}	
           <div class="res-inside-wrap col-lg-4 ">	
                <div class="single-res-thumb">
                    <a href="/browser/oeaw_detail/{{ basic.getRepoId() }}">
                        {{ basic.getTitleImage()|raw }}
                    </a>
                </div>
            </div>
        {% endif%}
    </div>

</div>    
